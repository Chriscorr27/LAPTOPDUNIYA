<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/laptop_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:backgroundTint="#A8F1C1"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/user_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="acer Aspire 7 Core i5 10th Gen - (8 GB/512 GB SSD/Windows 10 Home/4 GB Graphics/NVIDIA GeForce GTX 1650) A715-75G-50TA/ A715-75G-41G Gaming Laptop (15.6 inch, Black, 2.15 Kg)"
                    android:textSize="17sp"
                    android:textColor="#5C675D"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/price_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 4000 / day"
                    android:textSize="20dp"
                    android:textColor="#5C675D"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/ram_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8GB Ram"
                android:textSize="15dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:textColor="#706D6D"

                android:background="@drawable/feature_design"/>
            <TextView
                android:id="@+id/storage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSD 256GB"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:textColor="#706D6D"
                android:background="@drawable/feature_design"/>
            <TextView
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.15 Kg"
                android:textSize="15dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:textColor="#706D6D"
                android:layout_marginStart="5dp"
                android:background="@drawable/feature_design"/>
        </LinearLayout>
        <TextView
            android:id="@+id/size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.6 inch"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:textColor="#706D6D"
            android:layout_marginBottom="10dp"
            android:background="@drawable/feature_design"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>