<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/laptop_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:backgroundTint="#A8F1C1"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/user_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="acer Aspire 7 Core i5 10th Gen - (8 GB/512 GB SSD/Windows 10 Home/4 GB Graphics/NVIDIA GeForce GTX 1650) A715-75G-50TA/ A715-75G-41G Gaming Laptop (15.6 inch, Black, 2.15 Kg)"
                    android:textSize="17sp"
                    android:textColor="#5C675D"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginHorizontal="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total amont :"
                        android:textSize="15sp"
                        android:textColor="#5C675D"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="15dp"/>

                    <TextView
                        android:id="@+id/total_amount_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 4000"
                        android:textSize="15sp"
                        android:textColor="#5C675D"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="5dp"/>
                    <TextView
                        android:id="@+id/dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-10%"
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:textColor="#5C675D"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 4000"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:textColor="#5C675D"
                    android:background="@drawable/strike_through"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-10-12 to 2021-10-29"
                    android:textSize="15sp"
                    android:textColor="#5C675D"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In process"
                    android:textSize="15sp"
                    android:textColor="#5C675D"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>