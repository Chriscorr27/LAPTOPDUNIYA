<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaptopDuniya" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#39E340</item>
        <item name="colorPrimaryDark">#4CAF50</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">#1EA94F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

    </style>
    <style name="Theme.LaptopDuniya.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#39E340</item>
        <item name="colorPrimaryDark">#4CAF50</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">#1EA94F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        
    </style>
</resources>